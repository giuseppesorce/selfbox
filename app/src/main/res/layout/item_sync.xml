<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:anytext="http://schemas.android.com/apk/res-auto">

    <com.docgenerici.selfbox.android.custom.texts.CTextView
        android:layout_width="wrap_content"
        android:text="Contenuti"
        android:id="@+id/tvLabel"
        android:textSize="22sp"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/back_bar_sync_clean"
        android:layout_toLeftOf="@+id/tvPercentage"
        android:layout_marginTop="30dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:layout_marginRight="7dp"
        android:id="@+id/vRectPercentage"
        android:background="@drawable/back_bar_sync_green"
        android:layout_toLeftOf="@+id/tvPercentage"
        android:layout_marginTop="30dp"/>

    <com.docgenerici.selfbox.android.custom.texts.CTextView
        android:layout_width="62dp"
        android:text="100%"
        android:gravity="right"
        android:id="@+id/tvPercentage"
        android:textSize="24sp"

        android:layout_alignParentRight="true"
        android:layout_marginTop="23dp"
        android:textStyle="bold"
        anytext:font="robotobold"
        android:layout_height="wrap_content" />


</RelativeLayout>